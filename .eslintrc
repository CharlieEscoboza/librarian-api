{
  "extends": "google",
  "env": { "es6": true },
  "rules": {
    "prefer-const": [
      "error",
      {
        "destructuring": "all",
        "ignoreReadBeforeAssign": true
      }
    ],
    "one-var": ["error", "always"],
    "new-cap": ["error", { "capIsNew": false }],
    "object-curly-spacing": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "arrow-parens": ["error", "as-needed"],
    "indent": ["error", 2]
  }
}
